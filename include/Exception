#ifndef EXCEPTION
#define EXCEPTION

#include"String"
//异常处理库，不需要额外实现

String ExceptionMessage;

//THROW里的message应是char*
/*
	CATCH的用法是：
	CATCH {
		//在这里编写处理异常的代码 
	}
*/ 

#define THROW(message) ExceptionMessage = message;
#define CATCH if(!ExceptionMessage.equals(String("")))
#define ERROR ExceptionMessage

#endif
